<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment names="Development">
        <link href="~/lib/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/flexslider.css" rel="stylesheet" />
        <link href="~/lib/animate.min.css" rel="stylesheet" />
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/flexslider.css" rel="stylesheet" />
        <link href="~/lib/animate.min.css" rel="stylesheet" />
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <div id="root"></div>
    @Html.Partial("_Navbar")

    <div class="container-fluid">
        @RenderBody()
    </div>
    <environment names="Development">
        <script src="~/lib/jquery.min.js"></script>
        <script src="~/lib/bootstrap.min.js"></script>
        <script src="~/lib/jquery.flexslider.js"></script>
        <script src="~/js/site.min.js"></script>
        <script src="~/js/livereload.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery.min.js"></script>
        <script src="~/lib/bootstrap.min.js"></script>
        <script src="~/lib/jquery.flexslider-min.js"></script>
        <script src="~/js/site.min.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
